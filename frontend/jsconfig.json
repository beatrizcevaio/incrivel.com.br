{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/config/*": ["config/*"],
      "~/components/*": ["components/*"],
      "~/layouts/*": ["layouts/*"],
      "~/pages/*": ["pages/*"],
      "~/helpers/*": ["helpers/*"],
      "~/icons/*": ["icons/*"],
      "~/utils/*": ["utils/*"],
      "~/contexts/*": ["contexts/*"],
      "~/services/*": ["services/*"],
      "~/public/*": ["public/*"],
      "~/styles/*": ["styles/*"]
    }
  },
  "include": ["**/*.jsx", "**/*.js"],
  "exclude": ["node_modules", ".next", "out"]
}
